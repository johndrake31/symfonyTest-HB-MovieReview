{% extends 'base.html.twig' %}

{% block title %}
	{% if isCreate == true %}
		Add Movie
	{% else %}
		Edit Movie

	{% endif %}

{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}


{% block body %}
	<div class="container">
		<div class="row p-5">
			<h1>Add A Movie</h1>
			{{form_start(form)}}

			{{form_row(form.name)}}
			{{form_row(form.summary)}}
			{{form_row(form.director)}}
			{{form_row(form.releaseyear)}}

			<button class="btn btn-success" type="submit">
				{% if isCreate == true %}
					Add Movie
				{% else %}
					Edit Movie
				{% endif %}
			</button>


			{{form_end(form)}}
		</div>
	</div>

{% endblock %}
